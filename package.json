{
	"name": "mywebsite",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"prod:deploy": "pnpm prod:build && pnpm prod:deploy:copy && pnpm prod:deploy:run",
		"prod:build": "pnpm prebuild && pnpm build",
		"prod:deploy:copy": "rsync -avz --delete -e 'ssh' ./* homelab:~/ssd-2tb/apps/michael/michael-website --include-from='prod.deploy.files.txt' --exclude '*'",
		"prod:deploy:run": "ssh homelab 'cd ~/ssd-2tb/apps/michael/michael-website && docker compose -f prod.compose.yml down && docker compose -f prod.compose.yml up -d'",
		"prebuild": "node scripts/generate-build-info.cjs",
		"postinstall": "node scripts/generate-build-info.cjs",
		"notes:list": "node scripts/manage-notes.cjs list",
		"notes:publish": "node scripts/manage-notes.cjs publish",
		"notes:unpublish": "node scripts/manage-notes.cjs unpublish",
		"notes:show-drafts": "node scripts/manage-notes.cjs show-drafts",
		"notes:hide-drafts": "node scripts/manage-notes.cjs hide-drafts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.36.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.3",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.38.2",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.3"
	},
	"type": "module",
	"dependencies": {
		"chart.js": "^4.5.0",
		"chartjs-adapter-date-fns": "^3.0.0",
		"date-fns": "^4.1.0"
	}
}