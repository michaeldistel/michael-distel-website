{
	"name": "mywebsite",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"prod:deploy": "pnpm prod:build && pnpm prod:deploy:copy && pnpm prod:deploy:run",
		"prod:build": "pnpm prebuild && pnpm build",
		"prod:deploy:copy": "rsync -avz -e 'ssh' ./* homelab:~/ssd-2tb/apps/michael-website --include-from='prod.deploy.files.txt' --exclude '*'",
		"prod:deploy:run": "ssh homelab 'cd ~/ssd-2tb/apps/michael-website && docker compose -f prod.compose.yml down && docker compose -f prod.compose.yml up -d'",
		"prebuild": "node scripts/generate-build-info.cjs",
		"postinstall": "node scripts/generate-build-info.cjs"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/kit": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"autoprefixer": "^10.4.18",
		"postcss": "^8.4.36",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.7",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.4.2",
		"vite": "^5.1.6"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.1"
	}
}